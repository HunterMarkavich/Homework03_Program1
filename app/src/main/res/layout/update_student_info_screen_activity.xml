<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_v_updateInfoHeader"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:background="#6750A3"
        android:fontFamily="sans-serif-black"
        android:text="UPDATE INFO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_updateInfoUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoHeader"
        tools:text="Uname here" />

    <Button
        android:id="@+id/btn_v_updateInfoUpdateInfoButton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="UPDATE INFO"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_updateInfoMajorDropdown" />

    <TextView
        android:id="@+id/tv_v_updateInfoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoLastName" />

    <EditText
        android:id="@+id/et_v_updateInfoEmailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoEmail"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updateInfoLastNameInput"
        tools:text="email" />

    <EditText
        android:id="@+id/et_v_updateInfoAgeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoAge"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updateInfoEmailInput"
        tools:text="age" />

    <TextView
        android:id="@+id/tv_v_updateInfoLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:text="Last Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoFirstName" />

    <EditText
        android:id="@+id/et_v_updateInfoFirstNameInput"
        android:layout_width="239dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoFirstName"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoUsername"
        tools:text="fname" />

    <TextView
        android:id="@+id/tv_v_updateInfoAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="22dp"
        android:text="Age:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoEmail" />

    <TextView
        android:id="@+id/tv_v_updateInfoGPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="22dp"
        android:text="GPA:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoAge" />

    <EditText
        android:id="@+id/et_v_updateInfoLastNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoLastName"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updateInfoFirstNameInput"
        tools:text="lname" />

    <EditText
        android:id="@+id/et_v_updateInfoGPAInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoGPA"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updateInfoAgeInput"
        tools:text="gpa" />

    <TextView
        android:id="@+id/tv_v_updateInfoMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:text="Major:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoGPA" />

    <TextView
        android:id="@+id/tv_v_updateInfoFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="First Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_updateInfoHeader" />

    <Button
        android:id="@+id/btn_v_updateInfoBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="BACK"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/sp_v_updateInfoMajorDropdown"
        android:layout_width="239dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updateInfoMajor"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updateInfoGPAInput" />

    <TextView
        android:id="@+id/tv_v_updateInfoUpdateInfo_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Error: Please fill out all the fields."
        android:textAlignment="center"
        android:textColor="#950000"
        android:textStyle="italic"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_updateInfoUpdateInfoButton"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>